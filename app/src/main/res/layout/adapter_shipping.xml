<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rectangle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>


                <TextView
                    android:id="@+id/tv_shippingtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_light"
                    android:gravity="center_vertical"/>




            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rectangle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Person"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>


                <TextView
                    android:id="@+id/tv_contactPerson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_light"
                    android:gravity="center_vertical"/>




            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rectangle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>


                <TextView
                    android:id="@+id/tv_contactNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Honor 7C (Blue, 3GB RAM, 32GB)"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_light"
                    android:gravity="center_vertical"/>




            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_altnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rectangle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Alternate Number"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>


                <TextView
                    android:id="@+id/tv_altNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Honor 7C (Blue, 3GB RAM, 32GB)"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_light"
                    android:gravity="center_vertical"/>




            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rectangle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"/>


                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>


                <TextView
                    android:id="@+id/tv_shippingAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Honor 7C (Blue, 3GB RAM, 32GB)"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_light"
                    android:gravity="center_vertical"/>




            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_rectangle">


            <LinearLayout
                android:id="@+id/ll_AddFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Update Address"
                    android:textSize="12sp"
                    android:layout_weight="0.99"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:gravity="center"/>


                <View
                    android:layout_weight="0.01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>


                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Delete Address"
                    android:textSize="12sp"
                    android:layout_weight="0.99"
                    android:background="@color/colorRed"
                    android:textColor="@color/white"
                    android:gravity="center"/>
                <View
                    android:layout_weight="0.01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>


                <Button
                    android:id="@+id/btn_chooseAddress"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Choose Address"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:visibility="gone"/>




            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
