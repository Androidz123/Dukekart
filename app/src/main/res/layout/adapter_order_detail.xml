<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBlackTransparent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/iv_product_image"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="14sp"
            android:layout_toRightOf="@id/iv_product_image"
            android:textColor="@color/black"
            android:text="Jaane Ka Nai Half Seleeve T-Shirt"/>


        <RelativeLayout
            android:id="@+id/rl_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@id/tv_productName"
            android:layout_toRightOf="@+id/iv_product_image"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_prodMrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_alignParentLeft="true"
                android:paddingRight="8dp"
                android:textColor="@color/colorAccent"
                android:text="10"
                android:maxLines="1"
                android:layout_marginRight="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/tv_prodMrpPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 456233"
                android:layout_toRightOf="@+id/tv_prodMrp"
                android:textColor="@color/text_color_light"/>

            <LinearLayout
                android:id="@+id/ll_cartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/textView60"
                android:layout_toStartOf="@+id/textView60"
                >

                <TextView
                    android:id="@+id/tv_cartQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/iv_product_image"
            android:layout_below="@+id/rl_price">

            <TextView
                android:id="@+id/tv_size"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Size : M "/>

            <TextView
                android:id="@+id/tv_color"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv_size"
                android:layout_toLeftOf="@id/ll_cartCount"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Color : Black "/>

            <LinearLayout
                android:id="@+id/ll_trackorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent"
                android:elevation="@dimen/_160sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/textView60"
                android:layout_toStartOf="@+id/textView60"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track"
                    android:textStyle="bold"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>




        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:background="@color/colorBlackTransparent"/>

</LinearLayout>