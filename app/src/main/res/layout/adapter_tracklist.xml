<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_TrackMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:orientation="vertical">
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">
    <TextView
        android:id="@+id/tv_trackDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="15sp"
        android:singleLine="false"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:textColor="@color/black"
        android:layout_weight="1"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_background"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_trackStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="15sp"
                android:singleLine="false"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_centerVertical="true"


                android:textColor="@color/black"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_tracklocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="app_name    "
                android:textSize="14sp"
                android:singleLine="false"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:gravity="end"
                android:drawableRight="@drawable/ic_location"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_trackStatus2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    app_name"
                android:textSize="15sp"
                android:singleLine="false"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_list"

                />
        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_TrackMain"
        android:layout_height="1dp"
        android:layout_marginVertical="2dp"
        android:background="@color/grey"/>

</RelativeLayout>